@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<!-----------------------------BANNER---------------------------------->
@{Html.RenderAction("getHomeBanner", "Home");}

<!-----------------------------BODY------------------------------------>
<div class="site-section">
    <div class="container">
        <div class="row align-items-stretch section-overlap">

            @{Html.RenderAction("getHotNews", "Home");}

        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="title-section text-center col-12">
                <h2 class="text-uppercase">Sản phẩm bán chạy</h2>
            </div>
        </div>

        <div class="row">

            @{Html.RenderAction("getPopularProduct", "Home");}

        </div>
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="/san-pham" class="btn btn-primary px-4 py-3">Tất cả sản phẩm</a>
            </div>
        </div>
    </div>
</div>

<div class="site-section" style="background-color: ghostwhite">
    <div class="container">
        <div class="row">
            <div class="title-section text-center col-12">
                <h2 class="text-uppercase">Sản phẩm mới</h2>
            </div>
        </div>

        <div class="row">

            @{Html.RenderAction("getNewProduct", "Home");}

        </div>

    </div>
</div>


