@model Pharmacy.Models.Menu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Xoá menu</h1>
                <h4 class="mt-2 text-dark">Bạn muốn xoá menu này?</h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Menus")">Menu</a></li>
                    <li class="breadcrumb-item active">Xoá menu</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- /.container-fluid -->
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="card card-danger">
        <div class="card-header">
            <h3 class="card-title">Thông tin menu</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <div class="form-group">
            <div class="card-body">
                <div class="row form-group">
                    <div class="col-6">
                        <label>Tên menu:&nbsp;&nbsp;</label>
                        @Html.DisplayFor(model => model.name)
                    </div>
                    <div class="col-6">
                        <label>Meta:&nbsp;&nbsp;</label>
                        @Html.DisplayFor(model => model.meta)
                    </div>
                </div>

                <div class="row form-group mb-0">
                    <div class="col-3">
                        <label>Vị trí:&nbsp;&nbsp;</label>
                        @Html.DisplayFor(model => model.order)
                    </div>
                    <div class="col-3">
                        <label>Hiển thị:</label>
                        @(Model.hide.GetValueOrDefault(false) ? "Đang hiển thị" : "Đã ẩn")
                    </div>
                    <div class="col-4">
                        <label>Ngày cập nhật:</label>
                        @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>

    <div class="content-header">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xoá" class="btn btn-danger" />
                <a href="@Url.Action("Index", "Categories")">
                    <button type="button" class="btn btn-outline-secondary">Quay về</button>
                </a>
            </div>
        }

    </div>

</section>